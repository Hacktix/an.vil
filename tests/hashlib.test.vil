#include "harness.test.vil"
#include "../hashlib.vil"

fn main() {
    print_title("hash.crc8.from_bytearray()");

    print_section("Basic Usage");
    log_case("Single Byte", hash.crc8.from_bytearray(array() {0xff}), 0xf3);
    log_case("Multiple Bytes", hash.crc8.from_bytearray(array() {0xca, 0xfe}), 0x9b);
    print_cases();

    print_section("Edge Cases");
    log_case("Empty Array", hash.crc8.from_bytearray(array(0)), 0);
    log_case("Non-Array", hash.crc8.from_bytearray("abc"), nil);
    print_cases();



    print_title("hash.crc8.from_string()");

    print_section("Basic Usage");
    log_case("Single Character", hash.crc8.from_string("a"), 0x20);
    log_case("Multiple Characters", hash.crc8.from_string("Hello world"), 0x41);
    print_cases();

    print_section("Edge Cases");
    log_case("Empty String", hash.crc8.from_string(""), 0);
    log_case("Non-String", hash.crc8.from_string(123), nil);
    print_cases();
}